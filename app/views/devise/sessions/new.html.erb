<h2 class="text text-center">Log in</h2>

<div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"form-control", id: "exampleInputPassword1", placeholder: "Password", autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
