<h1 class="text text-center" style="margin: 50px; 0 25px; 0">Зарегистрироваться</h1>
<div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label "Имя пользователя" %><br />
      <%= f.text_field :username, class: "form-control", id: "exampleInputEmail1", placeholder: "Введите имя пользователя", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label "Краткое описание" %><br />
      <%= f.text_area :description, class: "form-control", placeholder: "Кто вы? Пару слов о себе.", autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", id: "exampleInputEmail2", placeholder: "Введите email", autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label "Пароль" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов минимум)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control", id: "exampleInputPassword1", placeholder: "Пароль", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label "Подтверждение пароля" %><br />
      <%= f.password_field :password_confirmation, class:"form-control", id: "exampleInputPassword2", placeholder: "Подтверждение пароля", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label "Аватар" %><br />
      <%= f.file_field :avatar %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
      <%= link_to 'Вход', new_user_session_path, class: 'navbar-link btn btn-success', style: "margin: 0 0 0 40px" %>
    </div>

  <% end %>
</div>
