<h2 class="text text-center">Редактирование пользователя</h2>
<%= link_to image_tag('back_button', alt: 'back', style: 'height:40px'), :back %>
<div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label "Имя пользователя" %><br />
      <%= f.text_field :username, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter username", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label "Краткое описание" %><br />
      <%= f.text_area :description, class: "form-control", placeholder: "Who are you?", autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", id: "exampleInputEmail2", placeholder: "Enter", autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label "Пароль" %> <i>(оставьте пустым, если не хотите его менять)</i>
      <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> символов минимум</em>
      <% end %>
      <%= f.password_field :password, class:"form-control", id: "exampleInputPassword1", placeholder: "Пароль", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label "Подтверждение пароля" %><br />
      <%= f.password_field :password_confirmation, class:"form-control", id: "exampleInputPassword2", placeholder: "Подтверждение пароля", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label "Аватар" %><br />
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.label "Текущий пароль" %> <i>(нам нужен ваш текущий пароль чтобы подтвердить ваши изменения)</i><br />
      <%= f.password_field :current_password, class:"form-control", id: "exampleInputPassword3", placeholder: "Текущий пароль", autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Обновить", class: "btn btn-primary", style: "margin: 0 0 10px 0" %>
    </div>
  <% end %>

</div>
<div class="text text-center">
  <h3>Удаление моего аккаунта</h3>
  <p>Не нравиться? <%= button_to "Удалить мой аккаунт", user_destroy_path, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
</div>
